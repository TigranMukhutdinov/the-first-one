# draw a ninja
import turtle


turtle.speed(50)
turtle.pencolor("red")
turtle.bgcolor("black")

for i in range (180):
    turtle.forward(100)
    turtle.right(30)
    turtle.forward(20)
    turtle.left(60)
    turtle.forward(60)
    turtle.right(30)

    turtle.penup()
    turtle.setposition(0, 0)
    turtle.pendown()

    turtle.right(2)

turtle.done()
